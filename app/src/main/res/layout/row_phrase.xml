<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_phrase"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="2dp"
    android:elevation="32dp"
    android:minHeight="70dp"
    android:orientation="vertical"
    app:cardCornerRadius="1dp">

    <RelativeLayout
        android:id="@+id/relativeLayout_phrase"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:minHeight="70dp">

        <LinearLayout
            android:id="@+id/linearLayout_row_phrase_title_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="4dp"
            android:transitionName="tLinearLayout_title">

            <TextView
                android:id="@+id/textView_phrase_eng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="eng"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#BB6A58"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/textView_phrase_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="port"
                android:textSize="15sp"
                android:textStyle="italic"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>