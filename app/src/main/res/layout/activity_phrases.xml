<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_category_phrases"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sow.brazilianportuguese.free.PhrasesActivity"
    android:background="@color/lightGray">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_category_phrases"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        app:theme="@style/Base.ThemeOverlay.AppCompat.Dark"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_category_phrases"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_category_phrases" />


</RelativeLayout>
