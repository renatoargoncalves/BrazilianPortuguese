<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_category"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="2dp"
    android:elevation="32dp"
    android:orientation="vertical"
    app:cardCornerRadius="1dp">

    <RelativeLayout
        android:id="@+id/relativeLayout_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout_row_category_title_subtitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:transitionName="tLinearLayout_title"
            android:padding="4dp">

            <TextView
                android:id="@+id/textView_row_category_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#BB452B"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/textView_row_category_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Subtitle"
                android:textSize="15sp" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>